<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reg_tv_name"
            fontPath="fonts/PT_Sans-Narrow-Web-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="16dp"
            android:text="Email"
            android:textColor="#3F6C95"
            android:textSize="@dimen/tickets_main_text_size" />

        <EditText
            android:id="@+id/reg_et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/reg_tv_name"
            android:layout_toRightOf="@+id/reg_tv_name"
            android:text=""
            android:textColor="#0B304B" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_reset_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="jkasdhfkjlasdhfkjasdf"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/tickets_main_text_size"
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_tickets_reset_psw"
        android:text="Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_btn_style"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:textAllCaps="false"
        android:textSize="@dimen/tickets_btn_text_size"
        fontPath="fonts/Roboto-Light.ttf"
        android:layout_margin="16dp"/>
</LinearLayout>