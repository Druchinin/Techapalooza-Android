<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="340dp"
    android:background="@color/windowBackground"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_marginTop="24dp">

        <ImageView
            android:id="@+id/ticket_background_image"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/individual_ticket" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ticket_lable_techapalooza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="TECHAPALOOZA"
                android:textColor="#0C1301"
                android:textSize="24sp"
                />

            <TextView
                android:id="@+id/ticket_lable_2016"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016"
                android:textColor="#426C90"
                android:textSize="24sp"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/ticket_qr_code"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_alignBottom="@+id/ticket_background_image"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/tv_ticket_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ticket id"
            android:textColor="@color/textColorBlack"
            android:layout_alignRight="@+id/ticket_background_image"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="32dp"
            android:textSize="16sp"/>

    </RelativeLayout>

</LinearLayout>