<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:background="@color/windowBackground">

    <LinearLayout
        android:id="@+id/band_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/band_list_logo_iv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/dummy_art_image"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/band_list_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Bill % Davey-O's Rockabilly Boys"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/schedule_main_text_size"
            android:gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignBottom="@id/band_list_item"
        android:background="@color/vertLineIndicatorNormal"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="116dp"/>

</RelativeLayout>