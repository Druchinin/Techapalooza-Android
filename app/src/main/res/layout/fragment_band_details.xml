<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/windowBackground"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/band_det_logo_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/dummy_art_image" />

        <TextView
            android:id="@+id/band_det_name_tv"
            fontPath="fonts/PT_Sans-Narrow-Web-Regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:text="Bill and Davey-O's Rockabilly Boys"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/news_feed_item_title_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/band_det_time_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:src="@mipmap/ic_action_7pm_icon_white" />

            <TextView
                android:id="@+id/band_det_hour_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="7"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/schedule_main_text_size" />

            <TextView
                android:id="@+id/band_det_min_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="4dp"
                android:text="00"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/schedule_small_text_size" />

            <TextView
                android:id="@+id/band_det_hour_am_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:text="pm"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/schedule_main_text_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/band_det_description"
            fontPath="fonts/PT_Sans-Narrow-Web-Regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/schedule_small_text_size" />

    </LinearLayout>

</ScrollView>