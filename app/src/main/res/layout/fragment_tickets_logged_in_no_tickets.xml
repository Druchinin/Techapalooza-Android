<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/no_tickets_logo"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/tv_title_no_tickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/tickets_tv_logged_info"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/tickets_main_text_size"
        android:layout_marginTop="18dp" />

    <Button
        android:id="@+id/no_tickets_purchase"
        android:text="@string/tickets_btn_purchase_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_btn_style"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:textAllCaps="false"
        android:textSize="@dimen/tickets_btn_text_size" />

    <TextView
        android:id="@+id/no_tickets_redeem_coupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tickets_redeem_coupon"
        android:textSize="@dimen/tickets_main_text_size"
        android:textColor="@color/textColorActive"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:gravity="bottom"
        android:clickable="true"/>


</LinearLayout>