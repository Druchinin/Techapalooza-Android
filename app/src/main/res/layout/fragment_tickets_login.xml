<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorWhite"
        android:layout_marginTop="1dp">

        <TextView
            android:id="@+id/tv_tickets_login_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Email"
            android:textColor="#3F6C95"
            android:textSize="@dimen/reg_lable_text_size"
            android:layout_margin="16dp" />

        <EditText
            android:id="@+id/reg_et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/colorWhite"
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext"
            android:nextFocusDown="@+id/et_tickets_login_password"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorWhite"
        android:layout_marginTop="1dp">

        <TextView
            android:id="@+id/tv_tickets_login_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Password"
            android:textColor="#3F6C95"
            android:textSize="@dimen/reg_lable_text_size"
            android:layout_margin="16dp"
            />

        <EditText
            android:id="@+id/et_tickets_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="#0B304B"
            android:text=""
            android:inputType="textVisiblePassword"
            />

        <TextView
            android:id="@+id/tv_hide_psw"
            android:text="HIDE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:layout_marginRight="16dp"
            android:clickable="true" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_tickets_login_sign_in"
        android:text="@string/tickets_btn_signIn_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_btn_style"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:textAllCaps="false"
        android:textSize="@dimen/tickets_btn_text_size"
        android:layout_marginTop="16dp" />

</LinearLayout>