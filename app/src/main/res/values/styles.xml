<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="AppThemeDefault" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="actionMenuTextAppearance">@style/myCustomMenuTextApearance</item>
        <item name="actionMenuTextColor">@color/textColorActive</item>
        <item name="android:actionMenuTextColor">@color/textColorActive</item>
    </style>

    <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/textColorActive</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SimpleActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="actionMenuTextAppearance">@style/myCustomMenuTextApearance</item>
        <item name="actionMenuTextColor">@color/textColorActive</item>
        <item name="android:actionMenuTextColor">@color/textColorActive</item>
    </style>

</resources>
