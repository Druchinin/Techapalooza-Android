<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppThemeDefault" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="actionMenuTextAppearance">@style/myCustomMenuTextApearance</item>
        <item name="android:actionMenuTextColor">@color/textColorActive</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/textColorActive</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:labelTextSize">15sp</item>
    </style>


</resources>